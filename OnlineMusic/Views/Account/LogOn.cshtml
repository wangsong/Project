@model OnlineMusic.Models.Admin
@{
    Layout = null;
    ViewBag.Title = "LogOn";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="../../Content/onlinemusic-login.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
    <script src="../../Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        function submitForm(button) {
            var $button = $(button);
            var $form = $button.parents("form");
            if ($form.length > 0) {
                $form.submit();
            }
            return false;
        }
        $(function () {
            $("#UserName").focus();
            $("#UserName").keyup(function (e) {
                if (e.which == 13) {
                    $("#Password").focus().select();
                }
            });
            $("#Password").keyup(function (e) {
                if (e.which == 13) {
                    $("#btnLogin").click();
                }
            })
        });
    </script>
</head>
<body>
    <div id="header">
        <img src="../Content/themes/images/musiclogo2.png" />
    </div>
    <div id="container">
        <div id="main_container">
        </div>
        <div id="side_container">
            <!--login from-->
            <div id="loginfrom">
                @using (Html.BeginForm())
                {
                    <h2>
                        Log In</h2>
                
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Please input username" })
                       
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Please input password" })
                      
                       
                    <a href="javascript:void(0)" onclick="submitForm(this)" id="btnLogin" class="button">
                        Login</a>
                        
                    <div id="login-error-message">
                        @Html.ValidationSummary(false)
                        @{
                    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                            @ViewBag.ErrorMessage
                    }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <!--This is footer-->
    @Html.Action("Footer", "Common")
</body>
</html>
